apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: mailu-certificates
  namespace: mailu
spec:
  secretName: mailu-certificates
  issuerRef:
    name: {{ mailu_cert_issuer_name }}
    kind: {{ mailu_cert_issuer_kind }}
  dnsNames:
{% for domain in self_saas_projects | selectattr('smtp.enabled', 'defined') | selectattr('smtp.enabled') | map(attribute='smtp.domain') | list %}
    - {{ domain }}
{% endfor %}
