# SSH config for K3s tunnel
# Generated by Ansible
Host k3s-tunnel
    HostName {{ k3s_server_ip }}
    User ubuntu
    Port {{ k3s_ssh_port }}
    LocalForward 6443 localhost:6443
    LocalForward {{ cassandra_local_port }} localhost:{{ cassandra_local_port }}
    LocalForward {{ elasticsearch_local_port }} localhost:{{ elasticsearch_local_port }}
    ServerAliveInterval 60
    ServerAliveCountMax 3